<%= turbo_stream.replace dom_id(@task) do %>
  <%= render partial: 'tasks/task', locals: { task: @task } %>
<% end %>
<%= turbo_stream.replace "incomplete_tasks_badge" do %>
  <turbo-frame id="incomplete_tasks_badge">
    <span class="badge badge-light"><%= current_user.tasks.where(completed: false).count %></span>
  </turbo-frame>
<% end %>
<%= turbo_stream.replace "completed_tasks_badge" do %>
  <turbo-frame id="completed_tasks_badge">
    <span class="badge badge-light"><%= current_user.tasks.where(completed: true).count %></span>
  </turbo-frame>
<% end %>